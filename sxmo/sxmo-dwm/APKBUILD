# Maintainer: Miles Alan <m@milesalan.com>
pkgname=sxmo-dwm
pkgver=6.2.10
pkgrel=0
pkgdesc="Dwm fork for Sxmo UI; supports volume-key hotkeys, swallow, keyboard, among other patches"
url="https://git.sr.ht/~mil/sxmo-dwm"
arch="all"
license="MIT/X"
depends="xorg-server"
makedepends="libxft-dev libx11-dev libxinerama-dev"
subpackages="$pkgname-doc"
provides="dwm"
options="!check" # has no tests
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~mil/sxmo-dwm/archive/$pkgver.tar.gz"

prepare() {
	default_prepare
	sed -i -e '/CFLAGS/{s/-Os//;s/=/+=/}' \
		-e '/LDFLAGS/{s/=/+=/}' \
		"$builddir"/config.mk
}

build() {
	make X11INC=/usr/include/X11 \
		X11LIB=/usr/lib/X11 \
		FREETYPEINC=/usr/include/freetype2 \
		-C "$builddir"
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		-C "$builddir" install
}

sha512sums="22179b4fdb113faf02ee9d517e69a763d2f1b345861b442740e8f730e35354542df048dc44e4227b806eead441c043a0fcc9d8672ef97fbf355268e3b555a608  sxmo-dwm-6.2.10.tar.gz"
