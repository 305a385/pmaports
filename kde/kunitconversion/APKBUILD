# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kunitconversion
pkgver=5.55.0
pkgrel=0
pkgdesc="Support for unit conversion"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1"
depends_dev="ki18n-dev"
makedepends="$depends_dev extra-cmake-modules qt5-qttools-dev doxygen"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # Check always fails

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="6e5d5c8deedc8b611ef5417cfd233624833c8720671716dd9ce7296e56d3bfeb70cd84c2008426f2064d98eaecf68e60a7e1fbb775dd24573c1329386bc1ee5c  kunitconversion-5.55.0.tar.xz"
