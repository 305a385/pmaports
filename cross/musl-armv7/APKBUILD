pkgname=musl-armv7
pkgver=1.2.2
pkgrel=3
arch="x86_64"
subpackages="musl-dev-armv7:package_dev"

_arch="armv7"
_mirror="http://dl-2.alpinelinux.org/alpine/"

url="https://musl-libc.org"
license="MIT"
options="!check !strip"
pkgdesc="the musl library (lib c) implementation for $_arch"

